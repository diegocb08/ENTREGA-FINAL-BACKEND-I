<h1>Productos (tiempo real)</h1>

<section
  style="display:grid; grid-template-columns: 1fr; gap:1rem; max-width: 880px;"
>
  <form
    id="createForm"
    style="border:1px solid #e5e7eb; border-radius:8px; padding:1rem;"
  >
    <h3 style="margin-top:0;">Crear producto</h3>
    <div
      style="display:grid; grid-template-columns: repeat(2, minmax(0,1fr)); gap:.75rem;"
    >
      <input name="title" placeholder="Título" required />
      <input name="code" placeholder="Código (único)" required />
      <input
        name="price"
        type="number"
        step="0.01"
        placeholder="Precio"
        required
      />
      <input name="stock" type="number" placeholder="Stock" required />
      <input name="category" placeholder="Categoría" required />
      <select name="status">
        <option value="true" selected>Disponible</option>
        <option value="false">No disponible</option>
      </select>
    </div>
    <textarea
      name="description"
      placeholder="Descripción"
      style="width:100%; margin-top:.75rem;"
      rows="3"
    ></textarea>
    <button
      class="btn primary"
      type="submit"
      style="margin-top:.75rem;"
    >Crear</button>
    <span id="formMsg" style="margin-left:.5rem; color:#6b7280;"></span>
  </form>

  <div style="border:1px solid #e5e7eb; border-radius:8px; padding:1rem;">
    <h3 style="margin-top:0;">Listado</h3>
    <div style="overflow:auto;">
      <table id="productsTable" style="width:100%; border-collapse:collapse;">
        <thead>
          <tr style="text-align:left; border-bottom:1px solid #e5e7eb;">
            <th>Título</th>
            <th>Categoría</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Estado</th>
            <th>Código</th>
            <th></th>
          </tr>
        </thead>
        <tbody><!-- filas dinámicas --></tbody>
      </table>
    </div>
  </div>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/realtime.js"></script>