<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{{title}}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <style>
      :root { --bg:#fff; --fg:#0f172a; --muted:#6b7280; --border:#e5e7eb;
      --brand:#111827; --brand-contrast:#fff; } * { box-sizing:border-box; }
      body { margin:0; font-family:Inter, system-ui, Segoe UI, Roboto, Arial,
      sans-serif; color:var(--fg); background:var(--bg); } a {
      color:var(--brand); text-decoration:none; } a:hover {
      text-decoration:underline; } .container { max-width:1100px; margin:0 auto;
      padding:0 16px; } .navbar { border-bottom:1px solid var(--border);
      background:#fafafa; } .navbar-inner { display:flex; align-items:center;
      gap:12px; padding:12px 0; } .brand { font-weight:600; font-size:1.05rem;
      margin-right:8px; } .nav-links { display:flex; gap:12px; } .nav-right {
      margin-left:auto; display:flex; align-items:center; gap:8px; } .btn {
      border:1px solid var(--border); background:#fff; padding:8px 10px;
      border-radius:8px; font-size:.9rem; cursor:pointer; } .btn.primary {
      background:var(--brand); color:var(--brand-contrast);
      border-color:var(--brand); } .btn:hover { filter:brightness(.97); }
      .cid-badge { padding:6px 8px; border:1px solid var(--border);
      border-radius:8px; font-size:.85rem; color:var(--muted); background:#fff;
      } main { padding:18px 0 32px; } footer { border-top:1px solid
      var(--border); color:var(--muted); font-size:.9rem; padding:16px 0 28px;
      background:#fafafa; margin-top:24px; }
    </style>
  </head>
  <body>
    <header class="navbar">
      <div class="container navbar-inner">
        <div class="brand"><a href="/">Mi E-commerce</a></div>
        <nav class="nav-links">
          <a href="/home">Home</a>
          <a href="/products">Productos</a>
          <a href="/realtimeproducts">Realtime</a>
        </nav>
        <div class="nav-right">
          <button class="btn" id="myCartBtn" type="button">Mi carrito</button>
          <button class="btn primary" id="newCartBtn" type="button">Nuevo
            carrito</button>
          <div id="cidBadge" class="cid-badge" title="Cart ID activo">CID: —</div>
        </div>
      </div>
    </header>

    <main class="container">
      {{{body}}}
    </main>

    <footer>
      <div class="container">Proyecto Final Backend I — Coderhouse · Handlebars
        + Node + MongoDB</div>
    </footer>

    <!-- JS del layout en archivo externo -->
    <script src="/public/js/layout.js"></script>
  </body>
</html>